<%= form_with(model: [ @blog, @blog.comments.build ], local: true, style: "margin-top: 20px;") do |form| %>
  <div style="margin-bottom: 10px;">
    <%= form.label :body, "Add a comment:", style: "display: block; font-weight: bold; margin-bottom: 5px;" %>
    <%= form.text_area :body, rows: 3, style: "width: 100%; border: 1px solid #ddd; padding: 10px; border-radius: 4px;" %>
  </div>
  <%= form.submit "Post Comment", style: "background: #007bff; color: white; border: none; padding: 8px 16px; border-radius: 4px; cursor: pointer;" %>
<% end %>