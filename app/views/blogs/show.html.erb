<div style="font-family: system-ui, sans-serif; max-width: 800px; margin: 40px auto; padding: 0 20px; color: #333;">
  <% if notice %>
    <p style="color: #155724; background-color: #d4edda; border-color: #c3e6cb; padding: 10px; border-radius: 4px; margin-bottom: 20px;"><%= notice %></p>
  <% end %>

  <div style="margin-bottom: 20px;">
    <%= link_to "â† Back to blogs", blogs_path, style: "color: #6c757d; text-decoration: none; font-size: 0.9rem;" %>
  </div>

  <article style="background: #fff; border: 1px solid #e1e4e8; border-radius: 8px; padding: 40px; box-shadow: 0 4px 6px rgba(0,0,0,0.05);">
    <div style="margin-bottom: 20px; border-bottom: 1px solid #eee; padding-bottom: 20px;">
      <h1 style="margin: 0; font-size: 2.5rem; color: #2c3e50;"><%= @blog.title %></h1>
      <p style="color: #6c757d; margin-top: 10px;">
        Status: 
        <span style="background-color: <%= @blog.published? ? '#d4edda' : '#fff3cd' %>; color: <%= @blog.published? ? '#155724' : '#856404' %>; padding: 2px 8px; border-radius: 4px; font-size: 0.85rem;">
          <%= @blog.published? ? "Published" : "Draft" %>
        </span>
      </p>
    </div>

    <div style="font-size: 1.1rem; line-height: 1.8; color: #2d3748; margin-bottom: 40px;">
      <%= simple_format @blog.body %>
    </div>

    <div style="display: flex; gap: 10px; border-top: 1px solid #eee; padding-top: 20px;">
      <%= link_to "Edit", edit_blog_path(@blog), style: "background-color: #007bff; color: white; padding: 8px 16px; text-decoration: none; border-radius: 4px;" %>
      
      <% unless @blog.published? %>
        <%= button_to "Publish", publish_blog_path(@blog), method: :patch, style: "background-color: #28a745; color: white; padding: 8px 16px; border: none; border-radius: 4px; cursor: pointer; font-size: 1rem;" %>
      <% end %>

      <%= button_to "Delete", @blog, method: :delete, style: "background-color: #dc3545; color: white; padding: 8px 16px; border: none; border-radius: 4px; cursor: pointer; font-size: 1rem;", form: {style: "display: inline-block;"} %>
    </div>

    <hr style="margin: 40px 0; border: 0; border-top: 1px solid #eee;">
    <section>
      <h3 style="color: #2c3e50;">Comments (<%= @blog.comments.count %>)</h3>
      
      <!-- Render the list of comments -->
      <!-- Rails automatically looks for _comment.html.erb -->
      <%= render @blog.comments %>
      <!-- Render the form -->
      <%= render 'comments/form' %>
    </section>
  </article>
</div>
