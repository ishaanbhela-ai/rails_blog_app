<div style="font-family: system-ui, sans-serif; max-width: 800px; margin: 40px auto; padding: 0 20px; color: #333;">
  <% if notice %>
    <p style="color: #155724; background-color: #d4edda; border-color: #c3e6cb; padding: 10px; border-radius: 4px; margin-bottom: 20px;"><%= notice %></p>
  <% end %>

  <% content_for :title, "Blogs" %>

  <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 30px; padding-bottom: 20px; border-bottom: 1px solid #eee;">
    <h1 style="margin: 0; font-size: 2rem; color: #2c3e50;">
      <%= action_name == 'unpublished' ? 'Unpublished Blogs' : 'Published Blogs' %>
    </h1>
    <div style="display: flex; gap: 15px;">
      <%= link_to "Published", blogs_path, style: "text-decoration: none; color: #{current_page?(blogs_path) ? '#007bff' : '#6c757d'}; font-weight: #{current_page?(blogs_path) ? 'bold' : 'normal'};" %>
      <%= link_to "Unpublished", unpublished_blogs_path, style: "text-decoration: none; color: #{current_page?(unpublished_blogs_path) ? '#007bff' : '#6c757d'}; font-weight: #{current_page?(unpublished_blogs_path) ? 'bold' : 'normal'};" %>
      <%= link_to "New Blog", new_blog_path, style: "background-color: #007bff; color: white; padding: 8px 16px; text-decoration: none; border-radius: 4px; font-weight: 500;" %>
    </div>
  </div>

  <div id="blogs">
    <% if @blogs.empty? %>
      <p style="text-align: center; color: #6c757d; font-style: italic; margin-top: 40px;">No blogs found.</p>
    <% else %>
      <% @blogs.each do |blog| %>
        <%= render blog %>
      <% end %>
    <% end %>
  </div>
</div>
